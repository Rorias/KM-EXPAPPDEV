<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagossie.Views.ThirstPage"
             NavigationPage.HasNavigationBar="False"
             Padding="10, 10, 10, 10">
    <RelativeLayout x:Name="navBarLayout">
        <Grid x:Name="navBarGrid" HeightRequest="64" WidthRequest="64">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64"/>
            </Grid.ColumnDefinitions>
            <ImageButton Grid.Column="0" Source="icon_main.png" HeightRequest="64" WidthRequest="64" Clicked="OnMainClicked"/>
        </Grid>
    </RelativeLayout>
</ContentPage>